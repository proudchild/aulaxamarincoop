<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Multiplataforma.Views.MyButtonPage">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="Button1" Text="Meu botão principal" BackgroundColor="#2295AB" TextColor="White" BorderWidth="5" BorderColor="AliceBlue" WidthRequest="150" HeightRequest="150" CornerRadius="10" Clicked="Button1_Clicked" ></Button>
            <Button x:Name="Button2" Text="Meu Segundo Botão" Clicked="Button1_Clicked" ></Button>
            <Button x:Name="Button3" Text="Meu Terceiro Botão" Clicked="Button3_Clicked" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>