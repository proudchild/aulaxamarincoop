<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Multiplataforma.Views.LeadCreateView"
             xmlns:local="clr-namespace:Multiplataforma.ViewModel">
    <ContentPage.BindingContext>
        <local:LeadViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout >
            <Label Text="Primeiro Nome"></Label>
            <Entry x:Name="EntryFirstName" Text="{Binding FirstName}"></Entry>
            <Label Text="Sobrenome"></Label>
            <Entry x:Name="EntryLastName" Text="{Binding LastName}" ></Entry>
            <Label Text="Celular"></Label>
            <Entry x:Name="EntryMobilePhone" Keyboard="Telephone" Text="{Binding MobilePhone}" ></Entry>
            <Label Text="Não receber chamada"></Label>
            <CheckBox x:Name="EntryDoNotCall" IsChecked="{Binding DoNotCall}" Color="Red"></CheckBox>
            <Label Text="Email"></Label>
            <Entry x:Name="EntryEmail" Keyboard="Email" Text="{Binding Email}" ></Entry>
            <Label Text="Não enviar email"></Label>
            <CheckBox x:Name="EntryDoNotEmail" IsChecked="{Binding DoNotEmail}" Color="Red"></CheckBox>
            <Label Text="Status do Lead"></Label>
            <Picker 
                x:Name="EntryStatusPicker" 
                Title="Selecione..." 
                TitleColor="Red" 
                ItemDisplayBinding="{Binding Label}"
                SelectedItem="{Binding ApiName}"
                ItemsSource="{Binding LeadStatus}">
                
            </Picker>

            <Button x:Name="SaveLead" Text="Salvar Lead" Clicked="SaveLead_Clicked" VerticalOptions="EndAndExpand"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>